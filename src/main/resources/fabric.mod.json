{
  "schemaVersion": 1,
  "id": "ddvgames",
  "version": "${version}",

  "name": "Super Minigame Entertainment System",
  "description": "SMES, colloquially known as DDVG (DiamondDev Games) - a Minecraft Minigame Mod",
  "authors": [
    "DiamondDev"
  ],
  "contact": {
    "homepage": "https://github.com/diamonddevv/",
    "sources": "https://github.com/diamonddevv/ddv-games"
  },

  "license": "CC0-1.0",
  "icon": "assets/ddvgames/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.diamonddev.ddvgames.DDVGamesMod"
    ],
    "client": [
      "net.diamonddev.ddvgames.client.DDVGamesClient"
    ],
    "cardinal-components": [
      "net.diamonddev.ddvgames.cca.DDVGamesEntityComponents",
      "net.diamonddev.ddvgames.cca.DDVGamesLevelComponents"
    ]
  },
  "custom": {
    "cardinal-components": [
      "ddvgames:role",
      "ddvgames:risingedge_lives",
      "ddvgames:gamemanager"
    ]
  },
  "mixins": [
    "ddvgames.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  }
}
